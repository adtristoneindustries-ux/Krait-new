rules_version = '2';

// Firebase Storage Rules for Patent Management App
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to all files (for testing)
    match /{allPaths=**} {
      allow read, write: if true;
    }
    
    // More secure rules for production (uncomment when ready):
    // match /patents/{patentId}/{fileType}/{fileName} {
    //   allow read, write: if true;
    // }
    // match /signatures/{fileName} {
    //   allow read, write: if true;
    // }
  }
}